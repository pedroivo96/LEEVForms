<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufpi.leevforms">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".View.FormStatisticsActivity"
            android:label="Estatísticas"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".View.AnswerActivity"
            android:label="Dados de resposta"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".View.FormListAnswersActivity"
            android:label="Lista de respostas"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".View.AnswerRegisterActivity"
            android:label="Cadastro de resposta"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".View.FormActivity"
            android:label="Dados de formulário"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".View.MyFormsActivity"
            android:label="Meus formulários"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".View.FormRegisterActivity"
            android:label="Cadastro de Formulário"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".View.ForgetPasswordActivity"
            android:label="Esqueci minhas senha"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".View.UserActivity"
            android:label="Meu perfil"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".View.LoginActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>