<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="false"
    android:padding="@dimen/activity_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutQuestionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/error"
        android:theme="@style/TextInputLayoutLabelGrey">

        <EditText
            android:id="@+id/eQuestionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enunciado da questÃ£o"
            android:theme="@style/EditTextTheme"
            android:drawableLeft="@mipmap/ic_edit_black"/>

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spQuestionType"
        android:background="@drawable/spinner_background"/>

</LinearLayout>